apiVersion: batch/v1
kind: Job
metadata:
  name: dependency-check-job
  namespace: owasp-dependency-check-ns
spec:
  template:
    metadata:
      annotations:
        vault.hashicorp.com/agent-inject: "true"
        vault.hashicorp.com/agent-pre-populate-only: "true"
        vault.hashicorp.com/agent-init-first: 'true'
        vault.hashicorp.com/role: "app-role"
        vault.hashicorp.com/agent-inject-secret-login: "secret/data/login"
        vault.hashicorp.com/agent-inject-template-login: |
          {{- with secret "secret/data/login" -}}
          export AZP_TOKEN="{{ .Data.data.AZP_TOKEN }}"
          {{- end }}
    spec:
      serviceAccount: vault-access-sa
      initContainers:
      - name: git-repo-downloader
        image: bitnami/git:latest
        command: ["/bin/sh","-c"]
        args:
        - |
            . /vault/secrets/login
            git clone "https://${AZP_TOKEN}@dev.azure.com/${ORGANIZATION}/${PROJECT}/_git/${REPO_NAME}" /source --branch main
            ls /source
        env:
        - name: ORGANIZATION
          valueFrom:
            configMapKeyRef:
              name: git-repo
              key: ORGANIZATION
        - name: PROJECT
          valueFrom:
            configMapKeyRef:
              name: git-repo
              key: PROJECT
        - name: REPO_NAME
          valueFrom:
            configMapKeyRef:
              name: git-repo  # Match your ConfigMap name
              key: REPO_NAME
        volumeMounts:
        - name: data
          mountPath: /source
        securityContext:
          runAsUser: 0  # Run as root for apk
      containers:
      - name: dependency-check
        image: owasp/dependency-check:latest
        command: ["/bin/sh", "-c"]
        args:
        - |
          cat  /vault/secrets/login && \
          echo "Starting Dependency-Check..." && \

          /usr/share/dependency-check/bin/dependency-check.sh \
            --scan /source \
            --format ALL \
            --project "php-azure-devops scan" \
            --out /report/jesa-med \
            --noupdate \
          echo "Scan completed. Listing reports:" && \
          ls -la /report
        env:
        - name: NVD_API_KEY
          value: "0487389a-a9d0-42ef-8c12-b95c7b6b4b90"
        securityContext:
          runAsUser: 0 
        volumeMounts:
        - name: data-volume
          mountPath: /usr/share/dependency-check/data
        - name: data
          mountPath: /source
        - name: report-volume
          mountPath: /report
      volumes:
      - name: data-volume
        persistentVolumeClaim:
          claimName: dependency-check-data-pvc  # For Dependency-Check data
      - name: report-volume
        persistentVolumeClaim:
          claimName: dependency-check-report  # For Dependency-Check data
      - name: data
        emptyDir: {}  # For source code from GitHub
      restartPolicy: Never



